<!-- ORDER NUMBER, DATE OF CREATION, DUE -->
<div class="container d-block">
<div class="invoice-box d-sm-block"  id="invoice">
			<table cellpadding="0" cellspacing="0">
				<tr class="top">
					<td colspan="3">
						<table>
							<tr>
								<td class="title">
                                    <h1 class="payup">PayUp!</h1>
									<img src="/images/shut-up-logo-1000.png" style="width: 100%; max-width: 200px" alt="PayUp Logo here" />
									
								</td>
								<td class="information">
									
                                    <h3 class="payup">Order:</h3> <h5 class="mono text-muted">#{{clientData.order_num}}</h5><br/>
									<h3 class="payup">Created:</h3> <h5 class="mono text-muted">{{now}}</h5><br/>
                                    <h3 class="payup">PayUp:</h3> <h5 class="mono text-muted">14 days after issue</h5>
								</td>
							</tr>
						</table>
					</td>
				</tr>


				<!-- ISSUED TO/FROM -->
				<tr class="information">
					<td colspan="3">
						<table>
							<tr>
								<td>
									
                                    <h4 class="payup">Issued to:</h4>
									<h2 class="text-success payup font-weight-lighter">{{clientData.client}}</h2>
								
									<h4 class="payup">From:</h4>
									<h3 class="text-muted payup font-weight-lighter">{{userData.name}} // <span class="mono text-muted address">{{userData.address}}</span></h3>
                        
								</td>
							</tr>
						</table>
					</td>
				</tr>

			<!-- PRODUCTS -->		
				<tr class="heading">
					
                    <td class="payup font-weight-lighter">Item</td>
                    <td class="payup font-weight-lighter">Quantity</td>
					<td class="payup font-weight-lighter">Price</td>
					<td class="payup font-weight-lighter">In Stock</td>
				</tr>
               
                {{#each productData as |product|}}
				
				<tr class="item">
                    
					<td class="mono text-dark">{{product.name}}</td>
					<td class="mono text-secondary">{{product.product_quantity}}</td>
					<td class="mono text-dark">${{product.price}}</td>

					
				
                    <td class="mono text-secondary">{{product.in_stock}}</td>
					
					
				{{/each}}
				
				</tr>
                <tr class="total">
				<td></td>
				<td></td>
					
					<!-- TOTATL & DISCLAIMER -->
					<td class="payup font-weight-lighter ">Total: </td>
					<td class="mono">${{total}}</td>
					<tr>
					<td></td>
					<td class="name text-white-50 font-weight-light text-center">This invoice does NOT include GST</td>
					</tr>
					
					</tr>
					</table>
</div>
				<!-- PRINT INVOICE -->
				<div class="container w-50">
					<button type="button" id="print">Save Invoice</button>
</div>

	</div>